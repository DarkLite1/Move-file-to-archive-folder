{
  "SendMail": {
    "To": ["bob@contoso.com"],
    "When": "Always",
    "?": "When: Never | OnlyOnError | OnlyOnErrorOrAction | Always"
  },
  "MaxConcurrentJobs": 4,
  "Tasks": [
    {
      "ComputerName": "PC1",
      "Source": {
        "Folder": "C:\\folderA",
        "Recurse": false
      },
      "Destination": {
        "Folder": "C:\\folderB",
        "ChildFolder": "Year-Month",
        "DuplicateFile": "OverwriteFile"
      },
      "OlderThan": {
        "Quantity": 1,
        "Unit": "Day"
      },
      "?": {
        "Destination.ChildFolder": "Year-Month | Year\\Month | Year | YYYYMM",
        "Destination.DuplicateFile": "NULL | OverwriteFile | RenameFile",
        "OlderThan.Unit": "Day | Month | Year"
      }
    },
    {
      "ComputerName": null,
      "Source": {
        "Folder": "\\\\contoso\\folderA",
        "Recurse": false
      },
      "Destination": {
        "Folder": "\\\\contoso\\folderB",
        "ChildFolder": "Year",
        "DuplicateFile": null
      },
      "OlderThan": {
        "Quantity": 1,
        "Unit": "Year"
      },
      "?": "Move files older than 1 year to folder 'folderB\\2022' and do not overwrite duplicate files"
    }
  ]
}
